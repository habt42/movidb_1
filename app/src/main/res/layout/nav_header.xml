<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="?attr/colorPrimaryDark"
    android:gravity="bottom"
    android:orientation="vertical"
    android:padding="5dp">

    <com.framgia.habt.moviedb.ui.widget.FixNetworkImageView
        android:id="@+id/nav_header_imv_profile_pic"
        android:layout_width="@dimen/nav_header_profile_pic_width"
        android:layout_height="@dimen/nav_header_profile_pic_height"
        android:layout_gravity="center_horizontal"
        android:scaleType="fitXY"/>

    <Button
        android:id="@+id/nav_header_btn_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:gravity="center"/>
</LinearLayout>