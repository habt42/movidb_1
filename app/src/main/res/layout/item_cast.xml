<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/list_view_item_padding">

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/item_cast_imv_picture"
        android:layout_width="@dimen/list_view_item_image_width"
        android:layout_height="@dimen/list_view_item_image_height"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/list_view_item_padding"
        android:paddingTop="@dimen/list_view_item_padding">

        <TextView
            android:id="@+id/item_cast_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/list_view_item_title_text_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_cast_tv_character"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>